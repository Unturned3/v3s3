&csi0 {
	status = "okay";
};

&mipi_csi2 {
	status = "okay";
};

&mipi_csi2_in {
	mipi_csi2_in_csi0: endpoint {
		data-lanes = <1 2>;
		clock-noncontinuous;
		link-frequencies = /bits/ 64 <456000000>;
		remote-endpoint = <&imx219_mipi_csi2_out>;
	};
};

&dphy {
	status = "okay";
};

